<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/recipes.css">
  </head>

  <body>
    {{>header}}

    <div class="filter-link">
      <form class="filter-form">
        <label for="diet">Dietary Preference:</label>
        <select name="diet" id="diet">
          <option value="none">None</option>
          <option value="citrus-free">Citrus-Free</option>
          <option value="nightshade-free">Nightshade-Free</option>
          <option value="ginger-free">Ginger-Free</option>
        </select>

        <a href="/recipes/juices" id="juices-filter">Filter</a>
        <a href="/recipes/juices" id="remove-juice-filters">Remove filters</a>
      </form>

      <a href="/recipes/meals" id="other-page">View Meals</a>
    </div>

    <div class="parent-recipe">
      {{#if img}}
        <h1>Oops! There are no juices for those filters!</h1>
        <img src="{{img}}">
      {{/if}}
      <h1>{{juicesTitle}}</h1>
      <div class="recipe-box">
        {{#each juices}}
          <div>
            <h2>{{name}}</h2>
            Ingredients:

            <ul>
            {{#each ingredients}}
              <li>{{this}}</li>
            {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>