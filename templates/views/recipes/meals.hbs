<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/recipes.css">
  </head>

  <body>
    {{> header}}

    <label for="non-vegan">Dietary Preference:</label>
    <select name="non-vegan" id="non-vegan">
      <option value="none">None</option>
      <option value="vegan">Vegan</option>
      <option value="non-vegan">Non-Vegan</option>
    </select>

    <label for="allergy">Allergy:</label>
    <select name="allergy" id="allergy">
      <option value="none">None</option>
      <option value="gluten">Gluten</option>
      <option value="dairy">Dairy</option>
      <option value="nut">Nut</option>
    </select>

    <a href="/recipes/meals" id="filter">Filter</a>

    <div class="parent-recipe">
      <h1>BREAKFAST</h1>
      <div class="recipe-box">
        {{#each breakfast}}
          <div>
            <h2>{{name}}</h2>
            Ingredients:

            <ul>
            {{#each ingredients}}
              <li>{{this}}</li>
            {{/each}}
            </ul>
              
            Instructions:
            <p>{{instructions}}</p>
          </div>
        {{/each}}
      </div>

      <h1>LUNCH</h1>
      <div class="recipe-box">
        {{#each lunch}}
          <div>
            <h2>{{name}}</h2>
            Ingredients:

            <ul>
            {{#each ingredients}}
              <li>{{this}}</li>
            {{/each}}
            </ul>
              
            Instructions:
            <p>{{instructions}}</p>
          </div>
        {{/each}}
      </div>

      <h1>DINNER</h1>
      <div class="recipe-box">
        {{#each dinner}}
          <div>
            <h2>{{name}}</h2>
            Ingredients:

            <ul>
            {{#each ingredients}}
              <li>{{this}}</li>
            {{/each}}
            </ul>
              
            Instructions:
            <p>{{instructions}}</p>
          </div>
        {{/each}}
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>